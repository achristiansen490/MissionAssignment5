<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Basic page metadata -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Dynamic page title -->
    <title>@ViewData["Title"] - Smash Tutor</title>

    <!-- Custom favicon in browser tab -->
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />

    <!-- Bootstrap and site styling -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
<header class="smash-header">
    <div class="container smash-topbar">

        <!-- Top-left home indicator -->
        <div class="smash-brand">
            <span class="smash-dot"></span>
            <span class="smash-title">HOME</span>
        </div>

        <!-- Navigation buttons -->
        <nav class="smash-nav">
            <a class="smash-nav-btn" asp-controller="Home" asp-action="Index">Home</a>
            <a class="smash-nav-btn" asp-controller="Home" asp-action="Tutor">Tutor Calculator</a>
        </nav>
    </div>
</header>

<!-- Main page content gets injected here -->
<main class="container smash-shell">
    @RenderBody()
</main>

<!-- Footer shown on every page -->
<footer class="smash-footer">
    <div class="container">
        © @DateTime.Now.Year Alex Christiansen — IS 413 Mission #5 • Smash Tutor
    </div>
</footer>

<!-- Global scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

<!-- Page-specific scripts -->
@RenderSection("Scripts", required: false)
</body>
</html>